{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "module": "ESNext",
    "target": "es2016",
    "resolveJsonModule": true,
    "lib": ["es6","dom"],
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@garfish/*": ["packages/*/src"]
    },
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__",
    "packages/global.d.ts"
  ]
}
